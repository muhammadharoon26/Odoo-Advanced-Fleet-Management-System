<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="fleet_index_template" name="Our Fleet">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container py-5">
                    <h1 class="text-center mb-4">Our Fleet</h1>
                    <div class="row">
                        <t t-if="not vehicles">
                            <div class="col-12">
                                <div class="alert alert-info text-center" role="alert">
                                    No vehicles are currently available or published. Please check back later!
                                </div>
                            </div>
                        </t>
                        <t t-foreach="vehicles" t-as="vehicle">
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <a t-attf-href="/fleet/vehicle/{{ vehicle.id }}">
                                        <img class="card-img-top" t-attf-src="/web/image/fleet.management.vehicle/{{ vehicle.id }}/image_1920" style="height: 200px; object-fit: cover;" alt="Vehicle Image"/>
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title"><t t-esc="vehicle.name"/></h5>
                                        <p class="card-text">
                                            <t t-esc="vehicle.make"/> - <t t-esc="vehicle.model"/> (<t t-esc="vehicle.year"/>)
                                        </p>
                                        <a t-attf-href="/fleet/vehicle/{{ vehicle.id }}" class="btn btn-primary">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="fleet_detail_template" name="Vehicle Details">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container py-5">
                    <div class="row">
                        <div class="col-lg-7">
                            <img class="img img-fluid rounded shadow" t-attf-src="/web/image/fleet.management.vehicle/{{ vehicle.id }}/image_1920"/>
                        </div>
                        <div class="col-lg-5">
                            <h1 class="mt-4 mt-lg-0"><t t-esc="vehicle.name"/></h1>
                            <p class="lead"><t t-esc="vehicle.make"/> - <t t-esc="vehicle.model"/></p>
                            <hr/>
                            <h3>Specifications</h3>
                            <ul class="list-unstyled">
                                <li><strong>Model Year:</strong> <t t-esc="vehicle.year"/></li>
                                <li><strong>License Plate:</strong> <t t-esc="vehicle.license_plate"/></li>
                                <li><strong>VIN:</strong> <t t-esc="vehicle.vin"/></li>
                            </ul>
                            <hr/>
                            <h3 class="mt-4">Contact Us About This Vehicle</h3>
                            <form action="/fleet/inquiry" method="POST">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="vehicle_id" t-att-value="vehicle.id"/>
                                <div class="mb-3">
                                    <label for="customer_name" class="form-label">Your Name</label>
                                    <input type="text" class="form-control" name="customer_name" required="1"/>
                                </div>
                                <div class="mb-3">
                                    <label for="customer_email" class="form-label">Your Email</label>
                                    <input type="email" class="form-control" name="customer_email" required="1"/>
                                </div>
                                 <div class="mb-3">
                                    <label for="customer_phone" class="form-label">Your Phone (Optional)</label>
                                    <input type="text" class="form-control" name="customer_phone"/>
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" name="message" rows="4" required="1"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Submit Inquiry</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="fleet_thank_you_template" name="Thank You">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container py-5 text-center">
                    <h1 class="display-4">Thank You!</h1>
                    <p class="lead">Your inquiry has been submitted successfully. We will get back to you shortly.</p>
                    <hr class="my-4"/>
                    <a href="/fleet" class="btn btn-primary btn-lg">Back to Our Fleet</a>
                </div>
            </div>
        </t>
    </template>
</odoo>