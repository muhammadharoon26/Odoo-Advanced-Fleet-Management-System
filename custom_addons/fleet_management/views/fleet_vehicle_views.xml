<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_management_vehicle_tree" model="ir.ui.view">
        <field name="name">fleet.management.vehicle.tree</field>
        <field name="model">fleet.management.vehicle</field>
        <field name="arch" type="xml">
            <list string="Vehicles">
                <field name="name"/>
                <field name="make"/>
                <field name="model"/>
                <field name="license_plate"/>
                <field name="driver_id"/>
                <field name="state" decoration-success="state == 'available'" decoration-info="state == 'in_use'" decoration-warning="state == 'maintenance'" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_fleet_management_vehicle_form" model="ir.ui.view">
        <field name="name">fleet.management.vehicle.form</field>
        <field name="model">fleet.management.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <header>
                    <button name="action_set_in_use" type="object" string="Set to In Use" class="oe_highlight" invisible="state != 'available'"/>
                    <button name="action_set_maintenance" type="object" string="Set to Maintenance" invisible="state not in ('available', 'in_use')"/>
                    <button name="action_set_available" type="object" string="Set to Available" invisible="state == 'available'"/>
                    <button name="%(fleet_management.action_report_vehicle_details)d" type="action" string="Print Details"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,in_use,maintenance"/>
                </header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Vehicle Details">
                            <field name="make"/>
                            <field name="model"/>
                            <field name="year"/>
                            <field name="vehicle_type"/>
                        </group>
                        <group string="Identification &amp; Publishing">
                            <field name="license_plate"/>
                            <field name="vin"/>
                            <field name="active"/>
                            <field name="is_published"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Driver Information">
                            <group>
                                <field name="driver_id"/>
                                <field name="driver_license"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>