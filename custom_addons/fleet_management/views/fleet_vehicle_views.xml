<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_management_vehicle_tree" model="ir.ui.view">
        <field name="name">fleet.management.vehicle.tree</field>
        <field name="model">fleet.management.vehicle</field>
        <field name="arch" type="xml">
            <list string="Vehicles">
                <field name="name"/>
                <field name="make"/>
                <field name="model"/>
                <field name="license_plate"/>
                <field name="driver_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_fleet_management_vehicle_form" model="ir.ui.view">
        <field name="name">fleet.management.vehicle.form</field>
        <field name="model">fleet.management.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <header>
                    <button name="action_set_in_use" type="object" string="Set to In Use" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'available')]}"/>
                    <button name="action_set_maintenance" type="object" string="Set to Maintenance" attrs="{'invisible': [('state', 'not in', ('available', 'in_use'))]}"/>
                    <button name="action_set_available" type="object" string="Set to Available" attrs="{'invisible': [('state', '=', 'available')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,in_use,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Sales Car 1"/></h1>
                    </div>
                    <group>
                        <group string="Vehicle Details">
                            <field name="make"/>
                            <field name="model"/>
                            <field name="year"/>
                        </group>
                        <group string="Identification">
                            <field name="license_plate"/>
                            <field name="vin"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Driver Information">
                            <group>
                                <field name="driver_id"/>
                                <field name="driver_license"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>