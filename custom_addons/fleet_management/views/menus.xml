<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main App Menu -->
    <menuitem
        id="menu_fleet_management_root"
        name="Fleet Management"
        sequence="10"
        web_icon="fleet_management,static/description/icon.png"/>

    <!-- Top Level Menu -->
    <menuitem
        id="menu_fleet_management_operations"
        name="Fleet Operations"
        parent="menu_fleet_management_root"
        sequence="10"/>
        
    <!-- Action and Menu for Inquiries -->
    <record id="action_fleet_management_inquiry" model="ir.actions.act_window">
        <field name="name">Website Inquiries</field>
        <field name="res_model">fleet.management.inquiry</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem
        id="menu_fleet_management_inquiry"
        name="Website Inquiries"
        parent="menu_fleet_management_operations"
        action="action_fleet_management_inquiry"
        sequence="5"/>

    <!-- Configuration Submenu -->
    <menuitem
        id="menu_fleet_management_configuration"
        name="Configuration"
        parent="menu_fleet_management_root"
        sequence="100"/>
        
    <!-- Existing Vehicle Actions and Menus -->
    <record id="action_fleet_management_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">fleet.management.vehicle</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem
        id="menu_fleet_management_vehicle"
        name="Vehicles"
        parent="menu_fleet_management_configuration"
        action="action_fleet_management_vehicle"
        sequence="10"/>

    <!-- Existing Driver Actions and Menus -->
    <record id="action_fleet_management_driver" model="ir.actions.act_window">
        <field name="name">Drivers</field>
        <field name="res_model">fleet.management.driver</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem
        id="menu_fleet_management_driver"
        name="Drivers"
        parent="menu_fleet_management_configuration"
        action="action_fleet_management_driver"
        sequence="20"/>
</odoo>