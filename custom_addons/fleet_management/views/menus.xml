<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main App Menu -->
    <menuitem
        id="menu_fleet_management_root"
        name="Fleet Management"
        sequence="10"
        web_icon="fleet_management,static/description/icon.png"/>

    <!-- Top Level Menu -->
    <menuitem
        id="menu_fleet_management_operations"
        name="Fleet Operations"
        parent="menu_fleet_management_root"
        sequence="10"/>

    <!-- Action for fleet.management.vehicle -->
    <record id="action_fleet_management_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">fleet.management.vehicle</field>
        <!-- In Odoo 18, the list view is referred to as 'list' -->
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_fleet_management_vehicle_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_fleet_management_vehicle_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new vehicle record.
            </p>
        </field>
    </record>

    <!-- Menu item for fleet.management.vehicle -->
    <menuitem
        id="menu_fleet_management_vehicle"
        name="Vehicles"
        parent="menu_fleet_management_operations"
        action="action_fleet_management_vehicle"
        sequence="10"/>

    <!-- Action for fleet.management.driver -->
    <record id="action_fleet_management_driver" model="ir.actions.act_window">
        <field name="name">Drivers</field>
        <field name="res_model">fleet.management.driver</field>
        <!-- In Odoo 18, the list view is referred to as 'list' -->
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_fleet_management_driver_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_fleet_management_driver_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new driver record.
            </p>
        </field>
    </record>

    <!-- Menu item for fleet.management.driver -->
    <menuitem
        id="menu_fleet_management_driver"
        name="Drivers"
        parent="menu_fleet_management_operations"
        action="action_fleet_management_driver"
        sequence="20"/>
</odoo>