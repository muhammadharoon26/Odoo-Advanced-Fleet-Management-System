<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_management_driver_tree" model="ir.ui.view">
        <field name="name">fleet.management.driver.tree</field>
        <field name="model">fleet.management.driver</field>
        <field name="arch" type="xml">
            <list string="Drivers">
                <field name="name"/>
                <field name="license_number"/>
                <field name="contact_phone"/>
                <field name="vehicle_count"/>
            </list>
        </field>
    </record>

    <record id="view_fleet_management_driver_form" model="ir.ui.view">
        <field name="name">fleet.management.driver.form</field>
        <field name="model">fleet.management.driver</field>
        <field name="arch" type="xml">
            <form string="Driver">
                <sheet>
                    <!-- PHASE 3: SMART BUTTON -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_vehicles" type="object" class="oe_stat_button" icon="fa-truck">
                            <field name="vehicle_count" widget="statinfo" string="Vehicles"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Driver's Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="license_number"/>
                            <field name="contact_phone"/>
                        </group>
                        <group>
                            <field name="contact_email"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Assigned Vehicles">
                            <field name="vehicle_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>