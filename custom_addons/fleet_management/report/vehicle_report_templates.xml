<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_vehicle_details_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Vehicle Detail Sheet</h2>
                        <p><strong>Vehicle ID:</strong> <span t-field="doc.name"/></p>
                        
                        <div class="row mt32">
                            <div class="col-6">
                                <strong>Vehicle Details:</strong>
                                <ul class="list-unstyled">
                                    <li>Make: <span t-field="doc.make"/></li>
                                    <li>Model: <span t-field="doc.model"/></li>
                                    <li>Year: <span t-field="doc.year"/></li>
                                </ul>
                            </div>
                            <div class="col-6">
                                <strong>Identification:</strong>
                                <ul class="list-unstyled">
                                    <li>License Plate: <span t-field="doc.license_plate"/></li>
                                    <li>VIN: <span t-field="doc.vin"/></li>
                                </ul>
                            </div>
                        </div>

                        <div class="row mt32">
                            <div class="col-6">
                                <strong>Current Status:</strong>
                                <p><span t-field="doc.state"/></p>
                            </div>
                            <div class="col-6">
                                <strong>Current Driver:</strong>
                                <p><span t-field="doc.driver_id.name"/></p>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>